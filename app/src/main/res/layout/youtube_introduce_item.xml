<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/introduce_linear"
    >

    <TextView
        android:id="@+id/title_tv"
        style="@style/content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        />


    <jaydenxiao.com.expandabletextview.ExpandableTextView
        android:id="@+id/expand_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:animDuration="200"
        app:collapseDrawable="@drawable/ic_expand_more"
        app:collapseExpandGrarity="right"
        app:collapseExpandTextColor="@color/color_0c0b0a"
        app:contentTextColor="@color/color_575757"
        app:contentTextSize="14sp"
        app:expandDrawable="@drawable/ic_expand_less"
        app:maxCollapsedLines="5"
        app:textCollapse="@string/collapse"
        app:textExpand="@string/expand"
        android:layout_marginBottom="8dp"
        />

</LinearLayout>