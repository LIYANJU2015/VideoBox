<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:padding="1dp"
        android:id="@+id/dm_poster"
        android:scaleType="centerCrop"
        android:src="@drawable/dm_item_img_default"
        android:layout_width="160dp"
        android:layout_height="90dp" />

        <TextView
            android:layout_margin="1dp"
            style="@style/list_time"
            android:visibility="gone"
            android:textColor="@color/material_white"
            android:background="@color/material_black"
            android:id="@+id/time"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            style="@style/list_title"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/update_time_tv"
            style="@style/content_descrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>