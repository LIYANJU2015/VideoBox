<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.videobox">

    <application
        android:name=".AppAplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.videobox.presenter.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presenter.DaiyMotionPlayerActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask" />

        <provider
            android:name=".model.db.VideoBoxContentProvider"
            android:authorities="com.videobox.data.db" />

        <activity android:name=".search.SearchActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize|stateHidden"
            />
    </application>

</manifest>